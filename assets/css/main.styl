/*分辨率较小时，右侧的功能按钮*/
.navbar-default .navbar-toggle
  border 0
  margin-right 5px
  &:hover, &:focus
    border 0
    background-color rgba(45, 54, 66, .8)

  .icon-bar
    background-color $blue

.navbar-default .navbar-brand
  color $blue

.navbar-default .navbar-nav > .active > a
  color: $blue
  background-color transparent
  &:hover, &:focus
    color: $blue
    background-color transparent

.navbar-default .navbar-nav .open .dropdown-menu > li > a
  color $blue
  &:hover, &:focus
    color $blue;
    background-color transparent

.navbar-default .navbar-nav > li > a
  transition(color .5s)
  &:hover, &:focus
    background-color transparent
    color $blue

@media (max-width: 767px)
  .navbar-default .navbar-nav .open .dropdown-menu > li > a
    color #ddd
    &.hover, &.focus
      color: $blue;
      background-color: transparent

  /*小屏幕时，卷动的菜单*/
  .navbar-collapse ul li a
    margin-left 10px
    margin-right 10px

