.pattern-image {
  width: 100%;
  background-size: 100%;
}

.parallax > img {
  width: 100%;
  min-width: 0;
  min-height: 0;
}

.parallax > img, .full-image > img {
  min-width: 100%;
  min-height: 100%;
  width: auto;
  height: auto;
  position: relative;
  z-index: 1;
}

.pattern-image:after {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 2;
  content: "";
  opacity: .2;
  background: #111;
  /* background: #000; */
  /* background: url("../img/pattern.png"); */
}

